<div class="accordion-item {{#if loading}}loading{{/if}}">
    <h2 class="accordion-header" id="heading{{id}}">
        <button class="accordion-button {{#unless expanded}}collapsed{{/unless}}" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapse{{id}}" aria-expanded="{{expanded}}"
                aria-controls="collapse{{id}}">
            {{name}}
        </button>
    </h2>
    <div id="collapse{{id}}" class="accordion-collapse collapse {{#if expanded}}show{{/if}}"
         aria-labelledby="heading{{id}}" data-bs-parent="#accordionCourse">
        <div class="accordion-body">
            <ul>
                {{#each children as |c|}}
                    <li>
                        {{#unless loading}}<img src="/img/play-circle-solid.svg" alt="play"/>{{/unless}}
                        {{c.name}}
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
