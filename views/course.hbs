<link rel="stylesheet" href="/css/course.css">
{{> header}}
<section>
    <div class="row">
        <div class="col-lg-8 video-content">
            <video class="player plyr"></video>
            <div class="spinner-container">
                {{> spiner}}
            </div>
        </div>
    </div>
</section>
<section>
    <div class="row">
        <div class="col-lg-8 m-auto">
            <div class="container">
                <h3>Content</h3>
                <div class="accordion" id="accordionCourse">
                    {{#each course.sections as |c|}}
                        {{> accordion parameter=c}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
{{> go-top}}
{{> footer}}
<script src="/js/lesson.bundle.js"></script>
